{
  "compilerOptions": {
    "allowJs": true,           // Allow JavaScript files to be compiled
    "checkJs": true,           // Enable type checking for JavaScript files
    "noEmit": true,            // Do not emit output files
    "esModuleInterop": true,   // Enables emitting imports for all module formats
    "forceConsistentCasingInFileNames": true,
    "strict": true,            // Enable all strict type-checking options
    "skipLibCheck": true       // Skip type checking of declaration files
  },
  "include": ["src/**/*"],      // Specify the JavaScript files to include
  "exclude": ["node_modules", "dist"] // Files/directories to exclude
}